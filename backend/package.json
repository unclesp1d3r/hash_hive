{
  "name": "@hashhive/backend",
  "version": "1.0.0",
  "private": true,
  "description": "HashHive backend API server",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "node --watch --import tsx src/main.ts",
    "build": "tsc",
    "start": "node --import tsx src/main.ts",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:coverage": "jest --config jest.config.cjs --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "lint": "npx eslint \"src/**/*.{ts,tsx,js,jsx}\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@auth/express": "^0.12.1",
    "@auth/mongodb-adapter": "^3.11.1",
    "@aws-sdk/client-s3": "^3.948.0",
    "@aws-sdk/s3-request-presigner": "^3.948.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.65.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf": "^3.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.0.1",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@testcontainers/minio": "^11.10.0",
    "@testcontainers/mongodb": "^11.10.0",
    "@testcontainers/redis": "^11.10.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.0",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^4.0.15",
    "aws-sdk-client-mock": "^4.1.0",
    "jest": "^30.2.0",
    "pino-pretty": "^13.1.3",
    "supertest": "^7.1.4",
    "testcontainers": "^11.10.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "vitest": "^4.0.15"
  }
}

{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "backend/src",
  "projectType": "application",
  "implicitDependencies": ["shared"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc",
        "cwd": "backend"
      },
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["dependencies", "configuration", "default"],
      "outputs": ["{projectRoot}/dist/**"]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx watch src/index.ts",
        "cwd": "backend"
      },
      "cache": false
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/index.js",
        "cwd": "backend"
      },
      "cache": false
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest",
        "cwd": "backend"
      },
      "cache": true,
      "inputs": ["testing", "dependencies"],
      "outputs": ["{projectRoot}/coverage/**"]
    },
    "test:integration": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --config vitest.integration.config.ts",
        "cwd": "backend"
      },
      "dependsOn": ["build"]
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest --coverage",
        "cwd": "backend"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx eslint \"src/**/*.{ts,tsx,js,jsx}\"",
        "cwd": "backend"
      },
      "cache": true,
      "inputs": ["configuration", "default"]
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "backend"
      },
      "cache": true,
      "inputs": ["configuration", "dependencies", "default"]
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t hashhive-backend:latest .",
        "cwd": "backend"
      },
      "cache": false,
      "dependsOn": ["build"],
      "inputs": ["docker", "dependencies", "production"],
      "outputs": ["{projectRoot}/.docker-cache/**"]
    }
  },
  "tags": []
}

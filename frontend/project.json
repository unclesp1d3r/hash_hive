{
  "name": "frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "frontend",
  "projectType": "application",
  "implicitDependencies": ["shared"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "next build",
        "cwd": "frontend"
      },
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["default", "^default"],
      "outputs": ["{projectRoot}/.next/**", "{projectRoot}/dist/**"]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "next dev",
        "cwd": "frontend"
      },
      "cache": false
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "next start",
        "cwd": "frontend"
      },
      "cache": false
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest --passWithNoTests",
        "cwd": "frontend"
      },
      "cache": true,
      "inputs": ["default", "^default", "{projectRoot}/**/*.test.{ts,tsx,js,jsx}"]
    },
    "test:e2e": {
      "executor": "nx:run-commands",
      "options": {
        "command": "playwright test --pass-with-no-tests || exit 0",
        "cwd": "frontend"
      },
      "cache": true,
      "inputs": ["default", "^default"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx eslint \"**/*.{ts,tsx,js,jsx}\"",
        "cwd": "frontend"
      },
      "cache": true,
      "inputs": ["default", "^default", "{projectRoot}/**/*.{ts,tsx,js,jsx}"]
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "frontend"
      },
      "cache": true,
      "inputs": ["default", "^default", "{projectRoot}/**/*.{ts,tsx}"]
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "next start",
        "cwd": "frontend"
      },
      "cache": false,
      "dependsOn": ["build"]
    }
  },
  "tags": []
}

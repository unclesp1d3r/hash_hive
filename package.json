{
  "name": "hashhive",
  "version": "1.0.0",
  "private": true,
  "description": "HashHive - Distributed password cracking platform",
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"bun run --filter '@hashhive/backend' dev\" \"bun run --filter '@hashhive/frontend' dev\"",
    "build": "bunx nx run-many --target=build",
    "lint": "bunx nx run-many --target=lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "type-check": "bunx nx run-many --target=type-check",
    "test": "bunx nx run-many --target=test",
    "pre-push": "bunx nx run-many --target=type-check,test"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-love": "^134.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "nx": "^22.4.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.2.0"
  }
}

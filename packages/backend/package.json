{
  "name": "@hashhive/backend",
  "version": "1.0.0",
  "private": true,
  "description": "HashHive backend API server â€” Hono on Bun.serve()",
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun dist/index.js",
    "worker:tasks": "bun src/worker-task-generation.ts",
    "worker:jobs": "bun src/worker-jobs.ts",
    "test": "bun test --preload ./tests/preload.ts",
    "lint": "biome check ./src",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.937.0",
    "@aws-sdk/s3-request-presigner": "^3.937.0",
    "@hashhive/shared": "workspace:*",
    "@hono/zod-validator": "^0.5.0",
    "bullmq": "^5.64.1",
    "drizzle-orm": "^0.44.0",
    "hono": "^4.7.0",
    "ioredis": "^5.8.2",
    "jose": "^6.1.3",
    "pino": "^10.1.0",
    "postgres": "^3.4.5",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.0",
    "drizzle-kit": "^0.31.0",
    "pino-pretty": "^13.1.2",
    "typescript": "^5.9.3"
  }
